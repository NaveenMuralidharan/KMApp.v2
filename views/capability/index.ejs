<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

<body>
    <%- include('../partials/header.ejs') %>
<nav>
    <!-- <a href="/capabilities/new"    > Add capability </a> -->
    <nav>
        <a href="/">How it works</a>
        <a href="/capabilities/new">Add Capability</a>
        
    </nav>
</nav>
    <div class = "container" >
        <% capabilities.forEach((capability, i)=>{ %>

            <div class="row">

                <div class="col">

                    <h2> <%= i + 1 %> - 

                        <a href="/capabilities/<%= capability._id %>">
                            <%= capability.capabilityName %>
                        </a> 
                    
                    </h2>

                </div>
                
                <div class="col">
                    <p>
                        <%= capability.valueEnabled %>
                    </p>
                    
                </div>    
            </div>
            <hr>    
                

        <% }) %>
    </div>


</body>

</html>